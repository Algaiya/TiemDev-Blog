{% extends 'base.html.twig' %}

{% block title %}Tiemoko's Blog - Articles{% endblock %}

{% block body %}
    <section class="articles">
        {% for article in articles %}
            <article>
                <h2>{{ article.title }}</h2>
                <div class="metadata">Cat√©gorie: {{ article.category }}</div>
                <div class="content">
                    <img src="{{ article.image }}" alt="image de l'article.">
                    {{ article.content | raw }}
                    <a href="{{ path('blog_show', {'id': article.id} ) }}" class="btn btn-primary">Lire la suite</a>
                </div>
            </article>
            <hr>
        {% endfor %}
    </section>
{% endblock %}
